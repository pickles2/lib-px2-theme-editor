<?xml version="1.0" encoding="UTF-8"?>
<kflow>
	<components>
		<component name="breadcrumb" label="Breadcrumb" is-void-element="false" can-set-class="false" can-set-width="false" can-set-height="false" can-set-contents-direction="false" can-set-scrollable="false" can-be-layer="false">
			<template><![CDATA[
{% if _ENV.mode == 'canvas' %}
{% for pageInfo in _ENV.extra.breadcrumb %}
{{ innerHTML | raw }}
{% endfor %}
{% elseif _ENV.mode == 'finalize' %}
<?php
$breadcrumb_array = $px->site()->get_breadcrumb_array();
foreach( $breadcrumb_array as $breadcrumb_array_pid ){
	$pageInfo = $px->site()->get_page_info($breadcrumb_array_pid);
?>{{ innerHTML | raw }}<?php
} ?>
{% endif %}
]]></template>
</component>
	</components>
</kflow>
