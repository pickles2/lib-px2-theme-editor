<?xml version="1.0" encoding="UTF-8"?>
<kflow>
	<components>
		<component name="localnavi" label="Local navigation" is-void-element="true" can-set-class="false" can-set-width="false" can-set-height="false" can-set-contents-direction="false" can-set-scrollable="false" can-be-layer="false">
			<style>
/**
 * ナビゲーション
 */
.theme-common-navi {
	margin-bottom: 0.7em;
	overflow: hidden;
	border-radius: 13px;

	a {
		display: block;
		padding: 10px;
		background-color: #eee;
	}
	p {
		text-align: center;
		margin: 1px 0;
		padding: 0;
		a {
			background-color: #ddd;
		}
	}
	ul {
		display: block;
		margin: 0;
		padding: 0;
	}
	ul li {
		display: block;
		margin: 1px 0;
		padding: 0;
		list-style-type: none;
	}
	ul ul a {
		padding-left: 25px;
		background-color: #f5f5f5;
		font-size: small;
	}
	ul ul ul a {
		padding-left: 40px;
		background-color: #fefefe;
		font-size: small;
	}
}
			</style>
			<template><![CDATA[
{% if _ENV.mode == 'canvas' %}<div style="display: contents;">{% endif %}

{% verbatim %}{% for pageInfo in categorySubMenu %}{% endverbatim %}
{{ innerHTML | raw }}
{% verbatim %}{% endfor %}{% endverbatim %}

{% if _ENV.mode == 'canvas' %}</div>{% endif %}
]]></template>
</component>
	</components>
</kflow>
