		"tomk79/px2-error-reporter": "~0.1",
		"tomk79/px2-serve": "^0.1",
        "vlucas/phpdotenv": "~5.6.1"
    },
    "autoload": {
        "psr-4": {
            "pickles2\\libs\\themeEditor\\": [
                "php"
            ]
        }
    }
}
